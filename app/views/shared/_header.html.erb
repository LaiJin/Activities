  <div class="container clearfix">
    <a class="header-logo-wordmark" href="/">
      活动通
    </a>
    <ul id="user-links">
      <% if current_user %>
        <% if current_user.isAdmin %>
              <li style="color: #000000"><%= link_to "你好, 管理员" %> </li>
        <% else %>
              <li style="color: black"><%= link_to "你好," +current_user.name %> </li>
        <% end %>
        <li><%= link_to "退出", logout_path, method: "delete", :style => "color: blue" %></li>
      <% end %>
    </ul>
  </div>


