.user_and_reset_password_view_background
  - if !url
    %h4 新用户注册
    = render :partial => 'shared/text_right_link_to', :locals => {:link_to_text => '用户登录', :url_or_path => login_path}
  = form_for user, :url => url  do |form|
    = render :partial => 'shared/text_field', :locals => {:form => form,
                                                           :span_text => '帐号',
                                                           :user_attribute => :name,
                                                           :disabled => false,
                                                           :placeholder_show => '请输入帐号'}

    = render :partial => 'shared/password_field', :locals => {:form => form,
                                                           :span_text => '请设置密码',
                                                           :user_attribute => :password,
                                                           :disabled => false,
                                                           :placeholder_show => '请输入密码'}

    = render :partial => 'shared/password_field', :locals => {:form => form,
                                                           :span_text => '请确认密码',
                                                           :user_attribute => :password_confirmation,
                                                           :disabled => false,
                                                           :placeholder_show => '请再次输入密码'}

    = render :partial => 'shared/text_field', :locals => {:form => form,
                                                           :span_text => '忘记密码问题',
                                                           :user_attribute => :question,
                                                           :disabled => false,
                                                           :placeholder_show => '请输入忘记密码问题'}

    = render :partial => 'shared/text_field', :locals => {:form => form,
                                                           :span_text => '忘记密码答案',
                                                           :user_attribute => :answer,
                                                           :disabled => false,
                                                           :placeholder_show => '请输入忘记密码答案'}
    = render :partial => 'shared/user_error_flash', :locals => {:user => user}
    = render :partial => 'shared/submit_button', :locals => {:form => form, :submit_button_text => url ? '确认添加' : '注册'}
