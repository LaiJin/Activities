.panel.panel-default{:style => 'margin-left: 180px; margin-right: 180px'}
  .panel-heading
    用户管理
    %a.btn.btn-default{:href => 'add_user_view'} 添加用户
  %table.table{:style => 'text-align: center'}
    %tr
      %td 编号
      %td 用户名
      %td 操作
    - @users.each do |user|
      %tr
        %td
          = @count += 1
        %td
          = link_to user.name, user_welcome_path(:user_name => user.name), :style => 'color: #1E90FF'
        %td
          = link_to '删除', delete_user_path(:deleted_user_id => user.id), :method => 'delete', :style => 'color: #1E90FF',:confirm => '确认删除吗？'
          = link_to '修改密码', edit_user_view_path(:updated_user_id => user.id), :style => 'color: #1E90FF'
= render :partial => 'shared/will_paginate', :locals => {:array => @users}