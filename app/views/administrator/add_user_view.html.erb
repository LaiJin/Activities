<ol class="breadcrumb" style="margin-right: 180px">
  <li><%= link_to "首页", administrator_welcome_view_path, :style=> "color: #1E90FF" %></li>
  <li class="active">添加用户</li>
</ol>
<div style="background: #F5F5F5; width: 659px; margin-left: 180px">
  <div class= "form-group" style=" padding: 50px 50px 50px 50px;width:659px ;margin:auto auto">
    <%= form_for @user, :url => 'add_user_view'  do |form| %>
        <%= render :partial => 'shared/register_and_add', :locals => {:form => form} %>
        <% if @user.errors.any? %>
            <dd class="flash-error text-center" style="margin-top: 15px"><%= @user.errors.full_messages.first %></dd>
        <% end %>
        <div class="text-center">
          <%= form.submit "确认添加", :class => "btn btn-default", :style => 'margin:20px auto auto auto ;width:150px' %>
        </div>

    <% end %>

  </div>
</div>


