<ol class="breadcrumb" style="margin-right: 180px">
  <li><%= link_to "首页", user_welcome_path, :style=> 'color: #1E90FF' %></li>
  <li class="active">报名列表</li>
</ol>

<div class="panel panel-default" style="margin-left: 180px; margin-right: 180px">
  <div class="panel-heading">
    竞价列表
    <div class="text-right">
      <%= link_to "竞价列表", bid_list_view_path(:activity_name => params[:activity_name], :activity_sign_ups_count => params[:activity_sign_ups_count]), :style => 'color: #1E90FF' %>
    </div>
  </div>
  <table class="table" style="text-align: center">
    <tr>
      <td>编号</td>
      <td>姓名</td>
      <td>手机号</td>
    </tr>
    <% @activity_sign_ups.each do |activity_sign_up| %>
    <tr>
      <td><%= @count += 1 %></td>
      <td><%= activity_sign_up.name %></td>
      <td><%= activity_sign_up.phone %></td>
    </tr>
    <% end %>
  </table>
</div>
<%= will_paginate @activity_sign_ups, :previous_label =>"上一页", :next_label => "下一页", :style => "margin-left:900px" %>