<div class="panel panel-default" style="margin-left: 180px; margin-right: 180px">
  <div class="panel-heading">
    活动信息
    <% if @biding %>
    <a class="btn btn-default" style="margin-left: 700px; margin-right: 46px" href= <%= synchronous_show_view_path(:biding_activity_name => @biding.activity_name, :biding_name => @biding.name) %> >同步展示</a>
    <% end %>
  </div>
  <table class="table" style="text-align: center">
    <tr>
      <td>编号</td>
      <td>活动名称</td>
      <td>报名人数</td>
      <td>竞价次数</td>
    </tr>
    <% @activity_infos.each do |activity_info| %>
    <tr>
      <td> <%= @count += 1 %> </td>
      <% @activity_sign_ups_count = ActivitySignUp.where(:user_name => current_user.name, :activity_name => activity_info.name).length %>
      <td><%= link_to activity_info.name, bid_list_view_path(:activity_name => activity_info.name, :activity_sign_ups_count => @activity_sign_ups_count), :style=> "color: #1E90FF" %></td>
      <td><%= link_to @activity_sign_ups_count, activity_sign_up_list_view_path(:activity_name => activity_info.name, :activity_sign_ups_count => @activity_sign_ups_count), :style=> "color: #1E90FF" %></td>
      <td><%= link_to (Bid.where(:user_name => current_user.name, :activity_name => activity_info.name)).length, bid_list_view_path(:activity_name => activity_info.name, :activity_sign_ups_count => @activity_sign_ups_count), :style=> "color: #1E90FF" %></td>
    </tr>
    <% end %>
  </table>
</div>
<%= will_paginate @activity_infos, :previous_label =>"上一页", :next_label => "下一页", :style => "margin-left:900px" %>
