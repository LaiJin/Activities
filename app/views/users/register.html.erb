<div class= "form-group" style="width: 600px; padding: 50px 50px 50px 50px;width:50% ;margin:auto auto">
  <%= form_for @user do |f| %>

      <h4>新用户注册</h4>
      <div class="col-sm-offset-2 col-sm-10 text-right" >
        <%= link_to "用户登陆",root_url %>
      </div>

      <div class="input-group" style="margin:20px auto auto auto">
        <span class="input-group-addon text-center" style="width: 120px">帐号</span>
        <%= f.text_field :name, :class => "form-control", :style => "width:450px"%>
      </div>


      <div class="input-group" style="margin:20px auto auto auto">
        <span class="input-group-addon text-center" style="width: 120px">请设置密码</span>
        <%= f.password_field :password, :class => "form-control", :style => "width:450px"%>
      </div>

      <div class="input-group" style="margin:20px auto auto auto">
        <span class="input-group-addon text-center" style="width: 120px">请确认密码</span>
        <%= f.password_field :password_confirmation, :class => "form-control", :style => "width:450px"%>
      </div>

      <div class="input-group" style="margin:20px auto auto auto">
        <span class="input-group-addon text-center" style="width: 120px">忘记密码问题</span>
        <%= f.text_field :question, :class => "form-control", :style => "width:450px"%>
      </div>

      <div class="input-group" style="margin:20px auto auto auto">
        <span class="input-group-addon text-center" style="width: 120px">忘记密码答案</span>
        <%= f.text_field :answer, :class => "form-control", :style => "width:450px"%>
      </div>

      <div class="text-center">
        <%= f.submit "注册", :class => "btn btn-default", :style => 'margin:20px auto auto auto ;width:150px' %>
      </div>

  <% end %>

</div>


